@using SportsDirect.Models;
@{
    ViewData["Title"] = "Home";
}
<!--Image carousel-------------------------------------------------------------------------------------------------------->
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/Banners/banner1.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/Banners/banner2.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/Banners/banner3.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!--Categories------------------------------------------------------------------------------------------------------------>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm">
            <img src="~/images/Tiles/sd-home-fw-april-mens.jpg" />
        </div>
        <div class="col-sm">
            <img src="~/images/Tiles/sd-home-fw-april-lds.jpg" />
        </div>
        <div class="col-sm">
            <img src="~/images/Tiles/sd-home-fw-april-kids.jpg" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <img src="~/images/Tiles/sd-home-cl-april-mens.jpg" />
        </div>
        <div class="col-sm">
            <img src="~/images/Tiles/sd-home-cl-april-lds.jpg" />
        </div>
        <div class="col-sm">
            <img src="~/images/Tiles/kids-clothing-457x457.jpg" />
        </div>
    </div>
</div>

<!--Just Landed---------------------------------------------------------------------------------------------------------------------->
<div class="container-fluid">
    <h2 class="text-center">
        JUST LANDED
    </h2>
    @{
        var LatestProducts = await CosmosDBGraphClient<Products>.GetItemsAsync("SportsDirectWebsite", "Products", d => d.Featured);
    }
    @await Html.PartialAsync("_FeaturedProductsStrip", LatestProducts)<!--Populates the featured products strip-->

</div>